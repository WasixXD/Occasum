{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "css-build": "node-sass --omit-source-map-url sass/index.scss public/css/global.css",
    "css-watch": "npm run css-build -- --watch",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "bulma": "^0.9.3",
    "node-sass": "^6.0.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
